  /* this is necessary for the jQuery.outerHeight to work. Suggested by http://stackoverflow.com/a/4119825/2626313 */
  overflow: hidden
  background-color: $_table_background_color
  z-index: 1
  padding-top: $_body_margin
  padding-bottom: $_body_margin
}
.fixed-scroll-header.is_stuck {
  /* hide table's right margin in FireFox. 1px might be enough */
